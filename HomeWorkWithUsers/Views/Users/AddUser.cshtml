@using HomeWorkWithUsers.Data.Domain
@model User

@{
    ViewData["Title"] = "Добавить пользователя";
}

<div class="text-center">
    <h2 class="display-4">@ViewData["Title"] </h2>
</div>

<form method="post" asp-controller="Users" asp-action="Check">
    <div class="form-group row">
        <label asp-for="Name" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SurName" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="SurName" />
            <span asp-validation-for="SurName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Phone" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="Phone" type="text" class="input-medium bfh-phone">
            <span asp-validation-for="Phone"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ParentId" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="ParentId" />
            <span asp-validation-for="ParentId"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">отправить</button>
</form>
