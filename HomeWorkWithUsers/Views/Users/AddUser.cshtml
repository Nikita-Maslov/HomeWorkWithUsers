@model UserModel

@{
    ViewData["Title"] = "Добавить пользователя";
}

<div class="text-center">
    <h2 class="display-4">@ViewData["Title"] </h2>
</div>

<form method="post" asp-controller="Users" asp-action="Check">
    <div class="form-group row">
        <label asp-for="name" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="name" />
            <span asp-validation-for="name"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="surName" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="surName" />
            <span asp-validation-for="surName"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="email" class="col-1 col-form-label"></label>
        <div class="col-11">
            <input asp-for="email" />
            <span asp-validation-for="email"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">отправить</button>
</form>
